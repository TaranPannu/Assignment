<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@drawable/border_round_white"

    android:color="#EEEDED"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_book"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.333" />

    <TextView
        android:id="@+id/boldTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

      app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Sample link name..."
        android:textStyle="bold"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22 Aug 2002"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/boldTextView" />

    <TextView
        android:id="@+id/clicks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:text="2023"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="16sp"


    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/clicks"
        android:text="Clicks"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
android:layout_marginTop="7dp"
        android:textColor="#8E8E8E"
        android:textSize="13sp"
        tools:layout_editor_absoluteX="363dp"
        tools:layout_editor_absoluteY="55dp" />

    <RelativeLayout
        android:id="@+id/bottomBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/broken_border_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Text on the left end -->
        <TextView
            android:id="@+id/bottomBoxText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Your Text"
            android:textColor="#3498db" />

        <ImageView
            android:id="@+id/bottomBoxCopyIcon"
            android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_copy_icon_foreground"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
